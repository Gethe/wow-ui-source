			</Layer>
			<Layer level="BORDER">
				<Texture name="CreditsBackground1" file="Interface\Glues\Credits\Parchment1">
					<Size x="256" y="256"/>
					<Anchors>
						<Anchor point="TOPLEFT" x="0" y="-128"/>
