<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
	<Script file="KioskModeSplash.lua"/>

	<Frame name="KioskModeSplash" mixin="KioskModeSplashMixin" toplevel="true" parent="GlueParent" setAllPoints="true" hidden="true">
		<Layers>
			<Layer level="BACKGROUND">
				<Texture parentKey="BG" atlas="BlizzCon2019Splash-BG" setAllPoints="true" nonBlocking="false"/>
			</Layer>
			<Layer level="ARTWORK">
				<Texture parentKey="NewCharacterLabel" atlas="BlizzCon2017Splash-label-newtowow" nonBlocking="false" hidden="true">
					<Size x="200" y="23"/>
					<Anchors>
						<Anchor point="BOTTOM" x="0" y="54"/>
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
		<Frames>
			<Button parentKey="NewExpansionButton" mixin="NewExpansionButtonMixin">
				<Size x="396" y="48"/>
				<Anchors>
					<Anchor point="BOTTOM" x="0" y="163"/>
				</Anchors>
				<Layers>
					<Layer level="ARTWORK">
						<Texture parentKey="Button" atlas="BlizzCon2019Splash-button-playexpansion" setAllPoints="true" nonBlocking="false"/>
					</Layer>
					<Layer level="OVERLAY">
						<FontString parentKey="Text" inherits="GameFontNormalHuge3" justifyH="CENTER" justifyV="CENTER">
							<Anchors>
								<Anchor point="CENTER"/>
							</Anchors>
							<Color r="1.0" g="0.82" b="0"/>
						</FontString>
					</Layer>
					<Layer level="HIGHLIGHT">
						<Texture parentKey="Highlight" atlas="BlizzCon2019Splash-button-playexpansion" alpha="0.3" setAllPoints="true" alphaMode="ADD" nonBlocking="false"/>
					</Layer>
				</Layers>
				<Scripts>
					<OnClick method="OnClick"/>
				</Scripts>
			</Button>
			<Button parentKey="NewPlayerButton" mixin="NewCharacterButtonMixin" hidden="true">
				<Size x="216" y="44"/>
				<Anchors>
					<Anchor point="BOTTOM" x="0" y="16"/>
				</Anchors>
				<Layers>
					<Layer level="ARTWORK">
						<Texture parentKey="Button" atlas="BlizzCon2017Splash-button-newplayer" setAllPoints="true" nonBlocking="false"/>
					</Layer>
					<Layer level="OVERLAY">
						<FontString parentKey="Text" text="Create Level 1 Character" inherits="GameFontNormalSmall2" justifyH="CENTER" justifyV="CENTER">
							<Anchors>
								<Anchor point="CENTER"/>
							</Anchors>
						</FontString>
					</Layer>
					<Layer level="HIGHLIGHT">
						<Texture parentKey="Highlight" atlas="BlizzCon2017Splash-button-newplayer" alpha="0.2" setAllPoints="true" alphaMode="ADD" nonBlocking="false"/>
					</Layer>
				</Layers>
				<Scripts>
					<OnClick method="OnClick"/>
				</Scripts>
			</Button>
		</Frames>
		<Scripts>
			<OnLoad method="OnLoad"/>
			<OnShow method="OnShow"/>
		</Scripts>
	</Frame>
</Ui>