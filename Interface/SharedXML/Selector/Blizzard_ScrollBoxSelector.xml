<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">
	<Script file="Blizzard_ScrollBoxSelector.lua"/>

	<Frame name="ScrollBoxSelectorTemplate" mixin="ScrollBoxSelectorMixin" inherits="SelectorTemplate" virtual="true">
		<Size x="494" y="375"/>
		<Frames>
			<EventFrame parentKey="ScrollBar" inherits="WowTrimScrollBar">
				<Anchors>
					<Anchor point="TOPRIGHT"/>
					<Anchor point="BOTTOMRIGHT"/>
				</Anchors>
			</EventFrame>

			<Frame parentKey="ScrollBox" inherits="WowScrollBoxList">
				<Anchors>
					<Anchor point="TOP"/>
					<Anchor point="BOTTOM"/>
					<Anchor point="RIGHT" relativeKey="$parent.ScrollBar" relativePoint="LEFT"/>
					<Anchor point="LEFT"/>
				</Anchors>
			</Frame>
		</Frames>
	</Frame>
</Ui>
