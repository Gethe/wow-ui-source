<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">
	<Script file="TabSystemTemplates.lua"/>

	<Button name="TabSystemButtonArtTemplate" mixin="TabSystemButtonArtMixin" virtual="true">
		<KeyValues>
			<KeyValue key="isTabOnTop" value="false" type="boolean"/>
		</KeyValues>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture parentKey="LeftDisabled" file="Interface\PaperDollInfoFrame\UI-Character-ActiveTab" parentArray="RotatedTextures">
					<Size x="20" y="35"/>
					<Anchors>
						<Anchor point="TOPLEFT" x="0" y="0"/>
					</Anchors>
					<TexCoords left="0" right="0.15625" top="0" bottom="0.546875"/>
				</Texture>
				<Texture parentKey="MiddleDisabled" file="Interface\PaperDollInfoFrame\UI-Character-ActiveTab" parentArray="RotatedTextures">
					<Size x="88" y="35"/>
					<Anchors>
						<Anchor point="LEFT" relativeKey="$parent.LeftDisabled" relativePoint="RIGHT"/>
					</Anchors>
					<TexCoords left="0.15625" right="0.84375" top="0" bottom="0.546875"/>
				</Texture>
				<Texture parentKey="RightDisabled" file="Interface\PaperDollInfoFrame\UI-Character-ActiveTab" parentArray="RotatedTextures">
					<Size x="20" y="35"/>
					<Anchors>
						<Anchor point="LEFT" relativeKey="$parent.MiddleDisabled" relativePoint="RIGHT"/>
					</Anchors>
					<TexCoords left="0.84375" right="1.0" top="0" bottom="0.546875"/>
				</Texture>
				<Texture parentKey="Left" file="Interface\PaperDollInfoFrame\UI-Character-InActiveTab" parentArray="RotatedTextures">
					<Size x="20" y="32"/>
					<Anchors>
						<Anchor point="TOPLEFT" x="0" y="-1"/>
					</Anchors>
					<TexCoords left="0" right="0.15625" top="0" bottom="1.0"/>
				</Texture>
				<Texture parentKey="Middle" file="Interface\PaperDollInfoFrame\UI-Character-InActiveTab" parentArray="RotatedTextures">
					<Size x="88" y="32"/>
					<Anchors>
						<Anchor point="LEFT" relativeKey="$parent.Left" relativePoint="RIGHT"/>
					</Anchors>
					<TexCoords left="0.15625" right="0.84375" top="0" bottom="1.0"/>
				</Texture>
				<Texture parentKey="Right" file="Interface\PaperDollInfoFrame\UI-Character-InActiveTab" parentArray="RotatedTextures">
					<Size x="20" y="32"/>
					<Anchors>
						<Anchor point="LEFT" relativeKey="$parent.Middle" relativePoint="RIGHT"/>
					</Anchors>
					<TexCoords left="0.84375" right="1.0" top="0" bottom="1.0"/>
				</Texture>
			</Layer>
		</Layers>
		<ButtonText parentKey="Text">
			<Size x="0" y="10"/>
			<Anchors>
				<Anchor point="CENTER" x="0" y="2"/>
			</Anchors>
		</ButtonText>
		<NormalFont style="GameFontNormalSmall"/>
		<HighlightFont style="GameFontHighlightSmall"/>
		<HighlightTexture parentKey="HighlightTexture" file="Interface\PaperDollInfoFrame\UI-Character-Tab-RealHighlight" alphaMode="ADD" parentArray="RotatedTextures">
			<Anchors>
				<Anchor point="TOPLEFT" x="3" y="5"/>
				<Anchor point="BOTTOMRIGHT" x="-3" y="0"/>
			</Anchors>
		</HighlightTexture>
	</Button>

	<Button name="TabSystemButtonTemplate" inherits="TabSystemButtonArtTemplate" mixin="TabSystemButtonMixin" motionScriptsWhileDisabled="true" virtual="true">
		<Size x="10" y="32"/>
		<Scripts>
			<OnEnter method="OnEnter"/>
			<OnLeave method="OnLeave"/>
			<OnClick method="OnClick"/>
		</Scripts>
	</Button>

	<Frame name="TabSystemTemplate" mixin="TabSystemMixin" inherits="HorizontalLayoutFrame" virtual="true">
		<KeyValues>
			<!--
			tabSelectedCallback: callback when a tab is selected, passed in the tabID that's generated by AddTab. (tabID) -> nil
			maxTabWidth: max width of a tab, including side textures. nil means no maximum.
			minTabWidth: min width of a tab, including side textures. nil means no minimum.
			tabTemplate: what button template to use for tabs. Must support the behavior from TabSystemButtonMixin.
			spacing: from HorizontalLayoutFrame.

			<KeyValue key="tabSelectedCallback" value="..." type="function"/>
			<KeyValue key="minTabWidth" value="60" type="number"/>
			<KeyValue key="maxTabWidth" value="100" type="number"/>
			-->
			<KeyValue key="tabTemplate" value="TabSystemButtonTemplate" type="string"/>
			<KeyValue key="spacing" value="-12" type="number"/>
		</KeyValues>
		<Scripts>
			<OnLoad method="OnLoad"/>
		</Scripts>
	</Frame>
</Ui>
