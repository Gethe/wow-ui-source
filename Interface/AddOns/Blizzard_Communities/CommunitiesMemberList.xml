						<Anchors>
							<Anchor point="TOPLEFT" relativePoint="TOPRIGHT" x="0" y="-15"/>
							<Anchor point="BOTTOMLEFT" relativePoint="BOTTOMRIGHT" x="0" y="11"/>
						</Anchors>
						<Layers>
							<Layer level="BACKGROUND">
