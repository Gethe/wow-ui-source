			</ScrollFrame>
			<Frame parentKey="DropDown" hidden="true" inherits="UIDropDownMenuTemplate">
				<Scripts>
					<OnLoad function="CommunitiesMemberListDropDown_OnLoad"/>
					<OnHide function="CommunitiesMemberListDropDown_OnHide"/>
				</Scripts>
			</Frame>
			<Frame parentKey="InsetFrame" useParentLevel="false" inherits="InsetFrameTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" x="-3" y="3"/>
					<Anchor point="BOTTOMRIGHT" x="-2" y="-2"/>
				</Anchors>
				<Scripts>
					<OnLoad>
						self.Bg:Hide();
						self:SetFrameLevel(100);
					</OnLoad>
				</Scripts>
			</Frame>
		</Frames>
		<Scripts>
			<OnLoad method="OnLoad"/>
			<OnShow method="OnShow"/>
			<OnEvent method="OnEvent"/>
			<OnHide method="OnHide"/>
			<OnUpdate method="OnUpdate"/>
		</Scripts>
	</Frame>

