	<Frame name="CommunitiesGuildNewsFrameTemplate" virtual="true">
		<Layers>
			<Layer level="BACKGROUND">
				<Texture file="Interface\GuildFrame\GuildFrame">
					<Anchors>
						<Anchor point="TOPLEFT" x="4" y="-1"/>
