			</Frame>
			<Frame parentKey="MapTab" mixin="MapCanvasMixin, AdventureMapMixin, OrderHallMissionAdventureMapMixin" setAllPoints="true" useParentLevel="true">
				<Scripts>
					<OnLoad method="OnLoad"/>
