<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">
	<Frame name="UIWidgetTemplateIconTextAndBackground" inherits="UIWidgetBaseTemplate" virtual="true" mixin="UIWidgetTemplateIconTextAndBackgroundMixin">
		<Size x="45" y="24"/>
		<Layers>
			<Layer level="OVERLAY">
				<Texture parentKey="Icon">
					<Size x="24" y="28"/> 
					<Anchors>
						<Anchor point="TOPLEFT" x="0"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="BORDER"> 
				<Texture parentKey="Glow">
					<Size x="157" y="59"/>
					<Anchors>
						<Anchor point="LEFT" relativeKey="$parent.Icon" x="-25"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="ARTWORK">
				<FontString parentKey="Text" inherits="GameFontNormalSmall">
					<Anchors>
						<Anchor point="CENTER" relativeKey="$parent.Glow" x="0" y="0"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
	</Frame>
</Ui>