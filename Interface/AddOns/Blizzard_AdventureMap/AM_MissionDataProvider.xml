	<Frame name="AdventureMap_MissionRewardTemplate" parentArray="Rewards" inherits="GarrisonMissionRewardEffectsTemplate" hidden="true" virtual="true">
		<Layers>
			<Layer level="BACKGROUND" textureSubLevel="-1">
