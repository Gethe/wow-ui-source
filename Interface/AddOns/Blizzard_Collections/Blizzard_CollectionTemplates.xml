						<Anchor point="TOPLEFT" x="4" y="-4" />
						<Anchor point="BOTTOMRIGHT" x="-4" y="4"/>
					</Anchors>
				</Texture>
			</Layer>
			
			<Layer level="BORDER" textureSubLevel="2">
				<Texture parentKey="ShadowCornerTopLeft" atlas="collections-background-shadow-large" useAtlasSize="true">
