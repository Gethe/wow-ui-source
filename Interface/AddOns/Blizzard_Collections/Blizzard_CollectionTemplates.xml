					<TexCoords left="0.0" right="1.0" top="1.0" bottom="0.0"/>
				</Texture>

				<Texture parentKey="ShadowCornerBottomRight" atlas="collections-background-shadow-large" useAtlasSize="true">
					<Anchors>
