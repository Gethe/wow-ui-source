<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
	<Script file="Blizzard_MajorFactionsLandingTemplates.lua"/>

	<Frame name="LandingPageMajorFactionListTemplate" mixin="MajorFactionListMixin" virtual="true">
		<Size x="390" y="420"/>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture atlas="GarrLanding-MissionListBG">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="TOPLEFT"/>
						<Anchor point="BOTTOMRIGHT" relativeKey="$parent" relativePoint="BOTTOMRIGHT"/>
					</Anchors>
				</Texture>
			</Layer>

			<Layer level="BORDER">
				<FontString parentKey="Title" inherits="Fancy20Font" text="MAJOR_FACTION_LIST_TITLE">
					<!-- Anchored after Scrollbox setup -->
					<Color r="1" g="1" b="1"/>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Frame parentKey="ScrollBox" inherits="WowScrollBoxList">
				<Anchors>
					<Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="TOPLEFT" x="-28" y="-40"/>
					<Anchor point="BOTTOMRIGHT" relativeKey="$parent" relativePoint="BOTTOMRIGHT" x="-28" y="5"/>
				</Anchors>
			</Frame>

			<EventFrame parentKey="ScrollBar" inherits="WoWTrimScrollBar">
				<Anchors>
					<Anchor point="TOPLEFT" relativeKey="$parent.ScrollBox" relativePoint="TOPRIGHT" x="10" y="0"/>
					<Anchor point="BOTTOMLEFT" relativeKey="$parent.ScrollBox" relativePoint="BOTTOMRIGHT" x="10" y="0"/>
				</Anchors>
			</EventFrame>
		</Frames>
		<Scripts>
			<OnLoad method="OnLoad"/>
			<OnShow method="OnShow"/>
			<OnHide method="OnHide"/>
			<OnEvent method="OnEvent"/>
		</Scripts>
	</Frame>

	<Frame name="MajorFactionButtonTemplate" virtual="true" mixin="MajorFactionButtonMixin">
		<Size x="400" y="85"/>
		<Anchors>
			<Anchor point="CENTER"/>
		</Anchors>
		<Frames>
			<Frame parentKey="LockedState" mixin="MajorFactionButtonLockedStateMixin">
				<Size x="400" y="85"/>
				<Anchors>
					<Anchor point="CENTER"/>
				</Anchors>
				<Layers>
					<Layer level="BACKGROUND">
						<Texture parentKey="Background">
							<Anchors>
								<Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="TOPLEFT"/>
								<Anchor point="BOTTOMRIGHT" relativeKey="$parent" relativePoint="BOTTOMRIGHT"/>
							</Anchors>
							<Color r="0.1" g="0.1" b="0.1" a="1"/>
						</Texture>
					</Layer>

					<Layer level="ARTWORK">
						<FontString parentKey="Title" inherits="GameFontHighlightLarge" justifyH="LEFT">
							<Size x="350" y="22"/>
							<Anchors>
								<Anchor point="LEFT" relativeKey="$parent" relativePoint="LEFT" x="22" y="-5"/>
							</Anchors>
							<Color r="0.5" g="0.5" b="0.5" a="1"/>
						</FontString>
						<FontString parentKey="StateInfo" inherits="GameFontHighlight" justifyH="LEFT" text="MAJOR_FACTION_BUTTON_FACTION_LOCKED">
							<Size x="350" y="22"/>
							<Anchors>
								<Anchor point="TOPLEFT" relativeKey="$parent.Title" relativePoint="BOTTOMLEFT"/>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
			</Frame>

			<Button parentKey="UnlockedState" mixin="MajorFactionButtonUnlockedStateMixin">
				<Size x="400" y="85"/>
				<Anchors>
					<Anchor point="CENTER"/>
				</Anchors>
				<Layers>
					<Layer level="ARTWORK">
						<Texture parentKey="Icon">
							<Size x="48" y="48"/>
							<Anchors>
								<Anchor point="LEFT" x="15" y ="-10"/>
							</Anchors>
							<Color r="0.1" g="0.1" b="0.1" a="1"/>
						</Texture>

						<MaskTexture parentKey="CircleMask" file="Interface\CharacterFrame\TempPortraitAlphaMask" hWrapMode="CLAMP" vWrapMode="CLAMP">
							<Size x="48" y="48"/>
							<Anchors>
								<Anchor point="CENTER" relativeKey="$parent.Icon"/>
							</Anchors>
							<MaskedTextures>
								<MaskedTexture childKey="Icon"/>
							</MaskedTextures>
						</MaskTexture>
					</Layer>

					<Layer level="OVERLAY">
						<Texture parentKey="IconBorder" atlas="CovenantSanctum-Icon-Border-kyrian" useAtlasSize="false" hidden="true">
							<Size x="100" y="100"/>
							<Anchors>
								<Anchor point="CENTER" relativeKey="$parent.Icon"/>
							</Anchors>
						</Texture>

						<FontString parentKey="RenownLevel" inherits="Game27Font">
							<Anchors>
								<Anchor point="CENTER" relativeKey="$parent.Icon" relativePoint="CENTER"/>
							</Anchors>
						</FontString>

						<Texture parentKey="SelectedTexture" atlas="GarrMission_FollowerListButton-Select" useAtlasSize="false" hidden="true">
							<Anchors>
								<Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="TOPLEFT"/>
								<Anchor point="BOTTOMRIGHT" relativeKey="$parent" relativePoint="BOTTOMRIGHT" x="0" y="-2"/>
							</Anchors>
						</Texture>
					</Layer>

					<Layer level="BACKGROUND">
						<Texture parentKey="Background">
							<Anchors>
								<Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="TOPLEFT"/>
								<Anchor point="BOTTOMRIGHT" relativeKey="$parent" relativePoint="BOTTOMRIGHT"/>
							</Anchors>
						</Texture>
					</Layer>

					<Layer level="ARTWORK">
						<FontString parentKey="Title" justifyH="LEFT" inherits="GameFontHighlightLarge">
							<Size x="350" y="22"/>
							<Anchors>
								<Anchor point="LEFT" relativeKey="$parent.Icon" relativePoint="RIGHT" x="12" y="2"/>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
				<Frames>
					<CheckButton parentKey="WatchFactionButton" hidden="true" mixin="MajorFactionWatchFactionButtonMixin" inherits="UICheckButtonArtTemplate">
						<Size x="16" y="16"/>
						<Anchors>
							<Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="TOPLEFT" x="5" y="-5"/>
						</Anchors>
						<Layers>
							<Layer level="ARTWORK">
								<FontString parentKey="Label" inherits="GameFontNormalSmall" justifyH="LEFT" text="MAJOR_FACTION_WATCH_FACTION_BUTTON_LABEL">
									<KeyValues>
										<KeyValue key="minLineHeight" value="8" type="number"/>
									</KeyValues>
									<Size x="280" y="14"/>
									<Anchors>
										<Anchor point="LEFT" relativeKey="$parent" relativePoint="RIGHT" x="4" y="0"/>
									</Anchors>
								</FontString>
							</Layer>
						</Layers>
						<Scripts>
							<OnShow method="OnShow"/>
							<OnHide method="OnHide"/>
							<OnClick method="OnClick"/>
							<OnEvent method="OnEvent"/>
						</Scripts>
					</CheckButton>

					<Button parentKey="QuestButton" hidden="true" mixin="MajorFactionQuestButtonMixin">
						<Size x="30" y="30"/>
						<Anchors>
							<Anchor point="TOPRIGHT" relativeKey="$parent" relativePoint="TOPRIGHT" x="-5" y="-5"/>
						</Anchors>
						<Layers>
							<Layer level="ARTWORK">
								<Texture parentKey="Icon" atlas="adventureguide-microbutton-alert" useAtlasSize="true">
									<Anchors>
										<Anchor point="CENTER"/>
									</Anchors>
								</Texture>
							</Layer>
						</Layers>
						<Scripts>
							<OnEnter method="OnEnter"/>
							<OnLeave method="OnLeave"/>
							<OnClick method="OnClick"/>
						</Scripts>
					</Button>

					<StatusBar parentKey="RenownProgressBar" mixin="MajorFactionRenownProgressBarMixin">
						<Size x="302" y="8"/>
						<Anchors>
							<Anchor point="TOPLEFT" relativeKey="$parent.Title" relativePoint="BOTTOMLEFT" x="0" y="-5"/>
						</Anchors>
						<Layers>
							<Layer level="BACKGROUND">
								<Texture parentKey="Background">
									<Anchors>
										<Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="TOPLEFT"/>
										<Anchor point="BOTTOMRIGHT" relativeKey="$parent" relativePoint="BOTTOMRIGHT"/>
									</Anchors>
									<Color r="0" g="0" b="0" a=".4"/>
								</Texture>
							</Layer>
							
							<Layer level="ARTWORK">
								<Texture parentKey="BorderLeft" file="Interface\AchievementFrame\UI-Achievement-ProgressBar-Border">
									<Size x="16" y="0"/>
									<Anchors>
										<Anchor point="TOPLEFT" x="-6" y="5"/>
										<Anchor point="BOTTOMLEFT" x="-6" y="-5"/>
									</Anchors>
									<TexCoords left="0" right="0.0625" top="0" bottom="0.75"/>
								</Texture>
								<Texture parentKey="BorderRight" file="Interface\AchievementFrame\UI-Achievement-ProgressBar-Border">
									<Size x="16" y="0"/>
									<Anchors>
										<Anchor point="TOPRIGHT" x="6" y="5"/>
										<Anchor point="BOTTOMRIGHT" x="6" y="-5"/>
									</Anchors>
									<TexCoords left="0.812" right="0.8745" top="0" bottom="0.75"/>
								</Texture>
								<Texture parentKey="BorderCenter" file="Interface\AchievementFrame\UI-Achievement-ProgressBar-Border">
									<Size x="16"/>
									<Anchors>
										<Anchor point="TOPLEFT" relativeKey="$parent.BorderLeft" relativePoint="TOPRIGHT"/>
										<Anchor point="BOTTOMRIGHT" relativeKey="$parent.BorderRight" relativePoint="BOTTOMLEFT"/>
									</Anchors>
									<TexCoords left="0.0625" right="0.812" top="0" bottom="0.75"/>
								</Texture>
							</Layer>
						</Layers>
						<Scripts>
							<OnLoad method="OnLoad"/>
						</Scripts>
						<BarTexture file="Interface\TargetingFrame\UI-StatusBar"/>
					</StatusBar>

					<Frame parentKey="UnlockFlash" hidden="true">
						<Anchors>
							<Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="TOPLEFT"/>
							<Anchor point="BOTTOMRIGHT" relativeKey="$parent" relativePoint="BOTTOMRIGHT"/>
						</Anchors>
						<Layers>
							<Layer level="OVERLAY">
								<Texture parentKey="UnlockFlashBackground" setAllPoints="true">
									<Color r="1" g="1" b="1"/>
								</Texture>
							</Layer>
						</Layers>
						<Animations>
							<AnimationGroup parentKey="Anim" setToFinalAlpha="true">
								<Alpha childKey="UnlockFlashBackground" duration="0.4" fromAlpha="0" toAlpha="0.8" />
								<Alpha childKey="UnlockFlashBackground" duration="0.4" fromAlpha="0.8" toAlpha="0" startDelay="0.5"/>
							</AnimationGroup>
						</Animations>
					</Frame>
				</Frames>
				<Scripts>
					<OnShow method="OnShow"/>
					<OnHide method="OnHide"/>
					<OnEvent method="OnEvent"/>
					<OnEnter method="OnEnter"/>
					<OnLeave method="OnLeave"/>
					<OnClick method="OnClick"/>
					<OnUpdate method="OnUpdate"/>
				</Scripts>
				<HighlightTexture>
					<Color r="1" g="1" b="1" a="0.2"/>
				</HighlightTexture>
			</Button>
		</Frames>
	</Frame>
</Ui>