<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
	<Script file="Blizzard_MajorFactionRenown.lua"/>

	<Frame name="MajorFactionRenownRewardTemplate" mixin="MajorFactionRenownRewardMixin" frameLevel="10" virtual="true">
		<Size x="360" y="136"/>
		<Layers>
			<Layer level="BORDER">
				<Texture parentKey="Toast" atlas="CovenantSanctum-Renown-Toast-Kyrian">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="TOPLEFT"/>
						<Anchor point="BOTTOMRIGHT" relativeKey="$parent" relativePoint="BOTTOMRIGHT"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="ARTWORK">
				<Texture parentKey="Icon">
					<Size x="64" y="64"/>
					<Anchors>
						<Anchor point="LEFT" x="32"/>
					</Anchors>
				</Texture>
				<MaskTexture parentKey="CircleMask" file="Interface\CharacterFrame\TempPortraitAlphaMask" hWrapMode="CLAMPTOBLACKADDITIVE" vWrapMode="CLAMPTOBLACKADDITIVE">
					<Size x="64" y="64"/>
					<Anchors>
						<Anchor point="CENTER" relativeKey="$parent.Icon"/>
					</Anchors>
					<MaskedTextures>
						<MaskedTexture childKey="Icon"/>
					</MaskedTextures>
				</MaskTexture>
				<FontString parentKey="Name" inherits="GameFontNormalMed2" justifyH="LEFT" wordwrap="true">
					<Size x="176" y="0"/>
					<Anchors>
						<Anchor point="LEFT" x="134" y="0"/>
					</Anchors>
				</FontString>
			</Layer>
			<Layer level="OVERLAY">
				<Texture parentKey="IconBorder" atlas="CovenantSanctum-Icon-Border-Kyrian" useAtlasSize="true">
					<Anchors>
						<Anchor point="CENTER" relativeKey="$parent.Icon"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="OVERLAY" textureSubLevel="1">
				<Texture parentKey="Check" atlas="CovenantSanctum-Renown-Checkmark-Large" useAtlasSize="true">
					<Size x="315" y="136"/>
					<Anchors>
						<Anchor point="BOTTOMRIGHT" relativeKey="$parent.IconBorder" x="-13" y="25"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="HIGHLIGHT">
				<Texture parentKey="Highlight" atlas="CovenantSanctum-Renown-Toast-Hover" useAtlasSize="false" alphaMode="ADD">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="TOPLEFT"/>
						<Anchor point="BOTTOMRIGHT" relativeKey="$parent" relativePoint="BOTTOMRIGHT"/>
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
		<Scripts>
			<OnEnter method="OnEnter"/>
			<OnLeave function="GameTooltip_Hide"/>
		</Scripts>
	</Frame>

	<Frame name="MajorFactionRenownFrame" mixin="MajorFactionRenownMixin" parent="UIParent" hidden="true" toplevel="true" enableMouse="true">
		<Size x="755" y="540"/>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture parentKey="Background">
					<Anchors>
						<Anchor point="TOPLEFT" x="26" y="-26"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="BORDER">
				<Texture parentKey="BackgroundShadow" atlas="CovenantSanctum-Renown-Background-Shadow" useAtlasSize="true">
					<Anchors>
						<Anchor point="BOTTOM" relativeKey="$parent.Background" y="11"/>
					</Anchors>
				</Texture>
				<Texture parentKey="CelebrationModelSceneTarget">
					<Size x="10" y="10"/>
					<Anchors>
						<Anchor point="BOTTOM" y="168"/>
					</Anchors>
				</Texture>
				<Texture parentKey="SelectedLevelGlow">
					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="ARTWORK">
				<Texture parentKey="TitleDivider">
					<Anchors>
						<Anchor point="TOP" y="-128"/>
