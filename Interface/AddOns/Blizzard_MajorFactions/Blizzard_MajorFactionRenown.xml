			</ModelScene>
			<Frame parentKey="TrackFrame" inherits="RewardTrackFrameTemplate">
				<Anchors>
					<Anchor point="TOP" y="-135"/>
				</Anchors>
				<KeyValues>
					<KeyValue key="elementTemplate" value="RenownLevelTemplate" type="string"/>
