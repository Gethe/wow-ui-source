					<Anchors>
						<Anchor point="CENTER" relativeKey="$parent.Icon"/>
					</Anchors>
				</Texture>
				<Texture parentKey="GlowSpin" atlas="services-ring-large-glowspin" alpha="1" ignoreParentAlpha="true" alphaMode="ADD" useAtlasSize="true" scale="0.3">
