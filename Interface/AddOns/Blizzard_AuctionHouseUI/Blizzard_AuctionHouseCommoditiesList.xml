	<Script file="Blizzard_AuctionHouseCommoditiesList.lua"/>

	<Frame name="AuctionHouseCommoditiesListTemplate" mixin="AuctionHouseCommoditiesListMixin" inherits="AuctionHouseItemListTemplate" virtual="true">
