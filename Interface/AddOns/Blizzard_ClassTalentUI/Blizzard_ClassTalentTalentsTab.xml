			<KeyValue key="getSpecializedChoiceMixin" value="ClassTalentUtil.GetSpecializedChoiceMixin" type="global"/>
			<KeyValue key="getEdgeTemplateType" value="ClassTalentUtil.GetEdgeTemplateType" type="global"/>
			<KeyValue key="topPadding" value="0" type="number"/>
			<KeyValue key="leftPadding" value="0" type="number"/>
			<KeyValue key="bottomPadding" value="82" type="number"/>
			<KeyValue key="rightPadding" value="0" type="number"/>
			<KeyValue key="basePanOffsetX" value="4" type="number"/>
			<KeyValue key="basePanOffsetY" value="-30" type="number"/>
			<KeyValue key="maximumCommitTime" value="6" type="number"/>
			<KeyValue key="disabledOverlayAlpha" value="0" type="number"/>
			<KeyValue key="enableCommitEndFlash" value="true" type="boolean"/>
			<KeyValue key="enableCommitCastBar" value="true" type="boolean"/>
			<KeyValue key="commitSound" value="SOUNDKIT.UI_CLASS_TALENT_APPLY_CHANGES" type="global"/>
		</KeyValues>
		<Layers>
			<Layer level="BACKGROUND" textureSubLevel="1">
				<Texture parentKey="BottomBar" atlas="talents-background-bottombar" useAtlasSize="true">
					<Anchors>
						<Anchor point="BOTTOM"/>
					</Anchors>
				</Texture>

				<Texture parentKey="Background" atlas="talents-background-druid-restoration" useAtlasSize="true">
					<Anchors>
						<Anchor point="BOTTOM" relativeKey="$parent.BottomBar" relativePoint="TOP"/>
					</Anchors>
				</Texture>

				<Texture parentKey="OverlayBackground" atlas="talents-background-druid-restoration" useAtlasSize="true" alpha="0" alphaMode="ADD">
					<Anchors>
						<Anchor point="BOTTOM" relativeKey="$parent.BottomBar" relativePoint="TOP"/>
					</Anchors>
					<Animations>
						<!-- Art TODO: Update Animations -->
						<AnimationGroup parentKey="Anim" looping="REPEAT" inherits="VisibleWhilePlayingAnimGroupTemplate">
							<Alpha childKey="OverlayBackground" order="1" fromAlpha="0" toAlpha=".25" duration="3" smoothing="IN"/>
							<Alpha childKey="OverlayBackground" order="2" fromAlpha=".25" toAlpha="0" duration="3" smoothing="IN"/>
						</AnimationGroup>
					</Animations>
				</Texture>
			</Layer>
			
			<Layer level="BACKGROUND" textureSubLevel="2">
				<!-- Art TODO: Replace Soulbind ForgeSheen graphics -->
				<Texture parentKey="Sheen1" atlas="soulbinds_backgroundfx_sheen" useAtlasSize="true" alpha="0" alphaMode="ADD" texelSnappingBias="0.0" snapToPixelGrid="false">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.Background" relativePoint="TOPLEFT"/>
					</Anchors>
					<Animations>
						<AnimationGroup parentKey="Anim" looping="REPEAT" inherits="VisibleWhilePlayingAnimGroupTemplate">
							<Alpha childKey="Sheen1" order="1" fromAlpha="0" toAlpha="0" duration="4"/>
							<Translation childKey="Sheen1" order="2" offsetX="-1422" offsetY="0"/>
							<Translation childKey="Sheen1" order="2" offsetX="1941" offsetY="0" duration="5.9"/>
							<Translation childKey="Sheen1" order="2" offsetX="-1422" offsetY="0" startDelay="5.9" duration="0.1"/>
							<Alpha childKey="Sheen1" order="2" fromAlpha="0" toAlpha="1" startDelay="0" duration="0.1"/>
							<Alpha childKey="Sheen1" order="2" fromAlpha="1" toAlpha="0" startDelay="5.8" duration="0.1"/>
						</AnimationGroup>
					</Animations>
				</Texture>
				<MaskTexture parentKey="Sheen1Mask" file="Interface\Soulbinds\soulbinds_backgroundfx_mask_forge">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.Background" relativePoint="TOPLEFT"/>
						<Anchor point="BOTTOMRIGHT" relativeKey="$parent.Background" relativePoint="BOTTOMRIGHT"/>
					</Anchors>
					<MaskedTextures>
						<MaskedTexture childKey="Sheen1"/>
					</MaskedTextures>
				</MaskTexture>
				
				<!-- Art TODO: Replace Soulbind BackgroundSheen graphics -->
				<Texture parentKey="Sheen2" atlas="soulbinds_backgroundfx_sheen" useAtlasSize="true" alphaMode="ADD" texelSnappingBias="0.0" snapToPixelGrid="false">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.Background" relativePoint="TOPLEFT"/>
					</Anchors>
					<Animations>
						<AnimationGroup parentKey="Anim" looping="REPEAT" inherits="VisibleWhilePlayingAnimGroupTemplate">
							<Translation childKey="Sheen2" order="1" offsetX="941" offsetY="0"/>
							<Translation childKey="Sheen2" order="1" offsetX="-2140" offsetY="0" startDelay="0" duration="40.9" />
							<Translation childKey="Sheen2" order="1" offsetX="941" offsetY="0" startDelay="40.9" duration="0.1"/>
							<Alpha childKey="Sheen2" order="1" fromAlpha="0" toAlpha="0.06" startDelay="0" duration="0.1"/>
							<Alpha childKey="Sheen2" order="1" fromAlpha="0.06" toAlpha="0" startDelay="40.8" duration="0.1"/>
						</AnimationGroup>
					</Animations>
				</Texture>
				<MaskTexture parentKey="Sheen2Mask" file="Interface\Soulbinds\soulbinds_backgroundfx_mask_full">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.Background" relativePoint="TOPLEFT"/>
						<Anchor point="BOTTOMRIGHT" relativeKey="$parent.Background" relativePoint="BOTTOMRIGHT"/>
					</Anchors>
					<MaskedTextures>
						<MaskedTexture childKey="Sheen2"/>
					</MaskedTextures>
				</MaskTexture>
				
				<!-- Art TODO: Replace Soulbind GridSheen graphics -->
				<Texture parentKey="Sheen3" atlas="soulbinds_backgroundfx_gridburst" useAtlasSize="false" alpha="0" alphaMode="ADD" texelSnappingBias="0.0" snapToPixelGrid="false">
					<Size x="320" y="320"/>
					<Anchors>
						<Anchor point="CENTER" relativeKey="$parent.Background" relativePoint="CENTER" x="-91" y="32"/>
					</Anchors>
					<Animations>
						<AnimationGroup parentKey="Anim" looping="REPEAT" inherits="VisibleWhilePlayingAnimGroupTemplate">
							<Alpha childKey="Sheen3" order="1" fromAlpha="0" toAlpha="0" duration="1.4"/>
							<Scale childKey="Sheen3" smoothing="IN" duration="5" order="2" fromScaleX="1" fromScaleY="1" toScaleX="14" toScaleY="14"/>
							<Scale childKey="Sheen3" smoothing="IN" duration=".1" order="3" fromScaleX="1" fromScaleY="1" toScaleX=".001" toScaleY=".001" startDelay="1"/>
							<Alpha childKey="Sheen3" order="2" fromAlpha="0" toAlpha=".3" startDelay="0" duration=".1"/>
							<Alpha childKey="Sheen3" order="2" fromAlpha=".3" toAlpha="0" startDelay=".1" duration="10.5"/>
						</AnimationGroup>
					</Animations>
				</Texture>
				<MaskTexture parentKey="Sheen3Mask" file="Interface\Soulbinds\soulbinds_backgroundfx_mask_grid">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.Background" relativePoint="TOPLEFT"/>
						<Anchor point="BOTTOMRIGHT" relativeKey="$parent.Background" relativePoint="BOTTOMRIGHT"/>
					</Anchors>
					<MaskedTextures>
						<MaskedTexture childKey="Sheen3"/>
					</MaskedTextures>
				</MaskTexture>
			</Layer>
		</Layers>
		<Frames>
			<Frame parentKey="ClassCurrencyDisplay" inherits="ClassTalentCurrencyDisplayTemplate">
				<Anchors>
					<Anchor point="CENTER" relativeKey="$parent" relativePoint="TOPLEFT" x="417" y="-48"/>
				</Anchors>
			</Frame>

			<Frame parentKey="SpecCurrencyDisplay" inherits="ClassTalentCurrencyDisplayTemplate">
				<Anchors>
					<Anchor point="CENTER" relativeKey="$parent" relativePoint="TOPRIGHT" x="-416" y="-48"/>
