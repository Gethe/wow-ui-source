						<Anchor point="LEFT" relativeTo="$parentHeader" x="10" y="0"/>
					</Anchors>
				</FontString>
				<FontString name="$parentNoNews" inherits="GameFontDisable" text="GUILD_NO_GUILD_NEWS" hidden="true">
