						<AbsDimension x="0" y="0"/>
					</Size>
					<Anchors>
						<Anchor point="CENTER" x="0" y="-11"/>
					</Anchors>
				</FontString>
				<FontString name="$parentMembersCountLabel" inherits="GameFontNormalSmall" text="GUILD_MEMBERS_ONLINE">
