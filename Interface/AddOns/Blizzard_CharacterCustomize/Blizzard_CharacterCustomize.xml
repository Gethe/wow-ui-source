				</KeyValues>
				<Anchors>
					<Anchor point="TOPRIGHT" x="-20" y="-166"/>
				</Anchors>
			</Frame>

			<Button parentKey="RandomizeAppearanceButton" inherits="CharCustomizeSmallButtonTemplate" mixin="CharCustomizeRandomizeAppearanceButtonMixin">
