							self.Left:SetTexture("Interface\\Buttons\\UI-Panel-Button-Up");
							self.Middle:SetTexture("Interface\\Buttons\\UI-Panel-Button-Up");
							self.Right:SetTexture("Interface\\Buttons\\UI-Panel-Button-Up");
