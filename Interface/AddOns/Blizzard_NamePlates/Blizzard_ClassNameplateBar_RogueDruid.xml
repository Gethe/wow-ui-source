		</KeyValues>
		<Scripts>
			<OnShow method="OnShow" inherit="prepend"/>
		</Scripts>
	</Frame>

	<Frame name="ClassNameplateBarDruidFrame" inherits="ClassResourceBarTemplate" mixin="ClassNameplateBar, ClassNameplateBarRogueDruid" ignoreParentScale="true">
