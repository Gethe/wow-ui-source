<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
	<Script file="Blizzard_ProfessionsFrame.lua"/>

	<Button name="ProfessionsFrameTabTemplate" mixin="ProfessionsFrameTabMixin" inherits="CharacterFrameTabButtonTemplate" virtual="true">
		<Size x="50" y="50"/>
		<KeyValues>
			<KeyValue key="selectedTextY" value="8" type="number"/>
			<KeyValue key="deselectedTextY" value="10" type="number"/>
		</KeyValues>
	</Button>

	<Frame name="ProfessionsFrame" mixin="ProfessionsMixin" inherits="PortraitFrameTemplate" parent="UIParent" toplevel="true" hidden="true" enableMouse="true">
		<Size x="1" y="582"/>
		<Frames>
			<Button name="$parentRecipesTab" parentArray="Tabs" parentKey="RecipesTab" inherits="ProfessionsFrameTabTemplate">
				<KeyValues>
					<KeyValue key="page" value="Crafting" type="string"/>
				</KeyValues>
				<Anchors>
					<Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" x="11" y="2"/>
				</Anchors>
			</Button>
			<Button name="$parentHubTab" parentArray="Tabs" parentKey="HubTab" inherits="ProfessionsFrameTabTemplate">
				<KeyValues>
					<KeyValue key="page" value="Hub" type="string"/>
				</KeyValues>
				<Anchors>
					<Anchor point="LEFT" relativeKey="$parent.RecipesTab" relativePoint="RIGHT" x="-16" y="0"/>
				</Anchors>
			</Button>
			

			<Button parentKey="LinkButton" mixin="DropDownToggleButtonMixin">
				<Size x="30" y="30"/>
				<Anchors>
					<Anchor point="TOPRIGHT" x="-22" y="-40"/>
				</Anchors>
				<Scripts>
					<OnEnter>
						GameTooltip:SetOwner(self, "ANCHOR_TOPLEFT");
						GameTooltip:SetText(LINK_TRADESKILL_TOOLTIP, nil, nil, nil, nil, true);
						GameTooltip:Show();
					</OnEnter>
					<OnLeave function="GameTooltip_Hide"/>
				</Scripts>
				<NormalTexture file="Interface\Buttons\UI-LinkProfession-Up"/>
				<PushedTexture file="Interface\Buttons\UI-LinkProfession-Down"/>
				<HighlightTexture file="Interface\Buttons\UI-Common-MouseHilight" alphaMode="ADD"/>
			</Button>
			<Frame parentKey="LinkDropDown" inherits="UIDropDownMenuTemplate"/>
		</Frames>
		<Scripts>
			<OnLoad method="OnLoad"/>
			<OnShow method="OnShow"/>
			<OnHide method="OnHide"/>
			<OnEvent method="OnEvent"/>
		</Scripts>
	</Frame>
</Ui>
