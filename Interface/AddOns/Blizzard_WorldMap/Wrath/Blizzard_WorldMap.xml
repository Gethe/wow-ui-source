									<Offset>
										<AbsDimension x="-512" y="128"/>
									</Offset>
								</Anchor>
							</Anchors>
						</Texture>
						<Texture file="Interface\WorldMap\UI-WorldMap-Middle2">
							<Size>
								<AbsDimension x="256" y="256"/>
