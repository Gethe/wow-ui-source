<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">
	<Script file="ChannelRoster.lua"/>

	<Frame name="ChannelRosterTemplate" mixin="ChannelRosterMixin" virtual="true">
		<Layers>
			<Layer level="BACKGROUND">
				<FontString parentKey="ChannelName" inherits="GameFontNormalSmall" justifyH="LEFT">
					<Size x="0" y="13"/>
					<Anchors>
						<Anchor point="TOPLEFT" x="2" y="17" />
						<Anchor point="TOPRIGHT" x="0" y="17" />
					</Anchors>
				</FontString>
				<FontString parentKey="ChannelCount" inherits="GameFontNormalSmall" justifyH="LEFT">
					<Size x="30" y="13"/>
					<Anchors>
						<Anchor point="LEFT" relativeKey="$parent.ChannelName" relativePoint="RIGHT"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Frame parentKey="ScrollBox" inherits="WowScrollBoxList">
				<Anchors>
					<Anchor point="TOPLEFT" x="3" y="-3"/>
					<Anchor point="BOTTOMRIGHT" x="-3" y="3"/>
				</Anchors>
			</Frame>
			<EventFrame parentKey="ScrollBar" inherits="WowTrimScrollBar">
				<Anchors>
					<Anchor point="TOPLEFT" relativeKey="$parent.ScrollBox" relativePoint="TOPRIGHT" x="3" y="3"/>
					<Anchor point="BOTTOMLEFT" relativeKey="$parent.ScrollBox" relativePoint="BOTTOMRIGHT" x="3" y="-6"/>
				</Anchors>
			</EventFrame>
		</Frames>
		<Scripts>
			<OnLoad method="OnLoad"/>
			<OnShow method="OnShow"/>
			<OnHide method="OnHide"/>
			<OnEvent method="OnEvent"/>
		</Scripts>
	</Frame>
</Ui>