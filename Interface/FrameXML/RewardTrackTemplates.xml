<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">
	<Script file="RewardTrackTemplates.lua"/>

	<Frame name="RenownLevelTemplate" mixin="RenownLevelMixin" virtual="true">
		<Size x="55" y="55"/>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture parentKey="Icon" parentArray="Textures">
					<Size x="40" y="39"/>
					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="BORDER">
				<Texture parentKey="IconBorder" parentArray="Textures">
					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="OVERLAY">
				<Texture parentKey="Check" atlas="CovenantSanctum-Renown-Checkmark" useAtlasSize="true" parentArray="Textures">
					<Anchors>
						<Anchor point="BOTTOMRIGHT" x="3" y="0"/>
					</Anchors>
				</Texture>
				<FontString parentKey="Level" inherits="GameFontNormal">
					<Anchors>
						<Anchor point="BOTTOM" y="-1"/>
					</Anchors>
				</FontString>
				<MaskTexture parentKey="HexMask" atlas="CovenantSanctum-Renown-Hexagon-Mask" useAtlasSize="true" hWrapMode="CLAMPTOBLACKADDITIVE" vWrapMode="CLAMPTOBLACKADDITIVE">
					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
				</MaskTexture>
			</Layer>
			<Layer level="HIGHLIGHT">
				<Texture parentKey="HighlightTexture" parentArray="Textures" alphaMode="ADD">
					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
		<Scripts>
			<OnMouseUp method="OnMouseUp"/>
			<OnEnter method="OnEnter"/>
			<OnLeave function="GameTooltip_Hide"/>
		</Scripts>
	</Frame>

	<Button name="RewardTrackButtonTemplate" mixin="RewardTrackButtonMixin" virtual="true">
		<Size x="22" y="39"/>
		<NormalTexture atlas="CovenantSanctum-Renown-Arrow" useAtlasSize="true">
			<Anchors>
				<Anchor point="CENTER" y="1"/>
			</Anchors>
		</NormalTexture>
		<PushedTexture atlas="CovenantSanctum-Renown-Arrow-Depressed" useAtlasSize="true">
			<Anchors>
				<Anchor point="CENTER" y="1"/>
			</Anchors>
		</PushedTexture>	
		<DisabledTexture atlas="CovenantSanctum-Renown-Arrow-Disabled" useAtlasSize="true">
			<Anchors>
				<Anchor point="CENTER" y="1"/>
			</Anchors>
		</DisabledTexture>
		<HighlightTexture atlas="CovenantSanctum-Renown-Arrow-Hover" useAtlasSize="true" alphaMode="ADD">
			<Anchors>
				<Anchor point="CENTER" y="1"/>
			</Anchors>
		</HighlightTexture>
		<Scripts>
			<OnLoad method="OnLoad"/>
			<OnMouseDown method="OnMouseDown"/>
			<OnMouseUp method="OnMouseUp"/>
			<OnDisable method="OnDisable"/>
		</Scripts>
	</Button>

	<Button name="RewardTrackJumpButtonTemplate" mixin="RewardTrackJumpButtonMixin" virtual="true">
		<Size x="26" y="44"/>
		<NormalTexture atlas="CreditsScreen-Assets-Buttons-FastForward" useAtlasSize="false">
			<Size x="26" y="44"/>
			<Anchors>
				<Anchor point="CENTER"/>
			</Anchors>
		</NormalTexture>
		<!-- Todo: Replace this with the final art!
		<PushedTexture atlas="CovenantSanctum-Renown-Arrow-Depressed" useAtlasSize="true">
			<Anchors>
				<Anchor point="CENTER" y="1"/>
			</Anchors>
		</PushedTexture>	
		<DisabledTexture atlas="CovenantSanctum-Renown-Arrow-Disabled" useAtlasSize="true">
			<Anchors>
				<Anchor point="CENTER" y="1"/>
			</Anchors>
		</DisabledTexture>
		<HighlightTexture atlas="CovenantSanctum-Renown-Arrow-Hover" useAtlasSize="true" alphaMode="ADD">
			<Anchors>
				<Anchor point="CENTER" y="1"/>
			</Anchors>
		</HighlightTexture>-->
		<Scripts>
			<OnLoad method="OnLoad"/>
			<OnClick method="OnClick"/>
			<OnEnable method="OnEnable"/>
			<OnDisable method="OnDisable"/>
		</Scripts>
	</Button>

	<Button name="RewardTrackSkipLevelUpButtonTemplate" mixin="RewardTrackSkipLevelUpButtonMixin" inherits="UIButtonTemplate, SharedGoldRedButtonSmallTemplate" text="RENOWN_LEVEL_UP_SKIP_BUTTON" virtual="true">
		<Size x="80" y="16"/>
		<Scripts>
			<OnClick method="OnClick"/>
		</Scripts>
		<NormalFont style="GameFontNormalTiny"/>
		<HighlightFont style="GameFontWhiteTiny"/>
		<DisabledFont style="GameFontDisableTiny"/>
	</Button>

	<Frame name="RewardTrackFrameTemplate" mixin="RewardTrackFrameMixin" virtual="true">
		<Size x="570" y="72"/>
		<Frames>
			<Frame parentKey="ClipFrame" clipChildren="true" setAllPoints="true">
				<Layers>
					<Layer level="OVERLAY">
						<MaskTexture parentKey="Mask" atlas="CovenantSanctum-Renown-Scroll-Mask" useAtlasSize="true" hWrapMode="CLAMPTOBLACKADDITIVE" vWrapMode="CLAMPTOBLACKADDITIVE">
							<Anchors>
								<Anchor point="CENTER"/>
							</Anchors>
						</MaskTexture>
					</Layer>
				</Layers>
			</Frame>
			<Button parentKey="LeftButton" inherits="RewardTrackButtonTemplate">
				<KeyValues>
					<KeyValue key="direction" value="-1" type="number"/>
				</KeyValues>
				<Anchors>
					<Anchor point="RIGHT" relativePoint="LEFT" x="-4"/>
				</Anchors>
			</Button>
			<Button parentKey="JumpLeftButton" inherits="RewardTrackJumpButtonTemplate">
				<KeyValues>
					<KeyValue key="direction" value="-1" type="number"/>
				</KeyValues>
				<Anchors>
					<Anchor point="RIGHT" relativeKey="$parent.LeftButton" relativePoint="LEFT" x="-4"/>
				</Anchors>
			</Button>
			<Button parentKey="RightButton" inherits="RewardTrackButtonTemplate">
				<KeyValues>
					<KeyValue key="direction" value="1" type="number"/>
				</KeyValues>
				<Anchors>
					<Anchor point="LEFT" relativePoint="RIGHT" x="4"/>
				</Anchors>
			</Button>
			<Button parentKey="JumpRightButton" inherits="RewardTrackJumpButtonTemplate">
				<KeyValues>
					<KeyValue key="direction" value="1" type="number"/>
				</KeyValues>
				<Anchors>
					<Anchor point="LEFT" relativeKey="$parent.RightButton" relativePoint="RIGHT" x="4"/>
				</Anchors>
			</Button>
		</Frames>
		<Scripts>
			<OnLoad method="OnLoad"/>
			<OnHide method="OnHide"/>
			<OnUpdate method="OnUpdate"/>
		</Scripts>
	</Frame>
</Ui>