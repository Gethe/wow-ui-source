<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
	<Script file="StatusTrackingManager.lua"/>

	<Frame name="StatusTrackingBarContainerTemplate" mixin="StatusTrackingBarContainerMixin" virtual="true" hidden="true">
		<Size x="571" y="17"/>
		<Layers>
			<Layer level="OVERLAY">
				<Texture parentKey="BarFrameTexture" atlas="UI-HUD-ExperienceBar-Frame" useAtlasSize="true"/>
			</Layer>
		</Layers>
	</Frame>

	<Frame name="StatusTrackingBarManager" parent="UIParent" frameStrata="MEDIUM" mixin="StatusTrackingManagerMixin">
		<Size x="571" y="34"/>
		<Anchors>
			<Anchor point="BOTTOM"/>
		</Anchors>
		<Frames>
			<Frame name="MainStatusTrackingBarContainer" parentKey="MainStatusTrackingBarContainer" inherits="StatusTrackingBarContainerTemplate, EditModeExperienceBarSystemTemplate">
				<Anchors>
					<Anchor point="BOTTOM"/>
				</Anchors>
			</Frame>
			<Frame name="SecondaryStatusTrackingBarContainer" parentKey="SecondaryStatusTrackingBarContainer" inherits="StatusTrackingBarContainerTemplate, EditModeReputationBarContainer">
				<Anchors>
					<Anchor point="BOTTOM" relativeKey="$parent.MainStatusTrackingBar" relativePoint="TOP"/>
				</Anchors>
			</Frame>
		</Frames>
		<Scripts>
			<OnLoad method="OnLoad"/>
			<OnEvent method="OnEvent"/>
		</Scripts>
	</Frame>
</Ui>