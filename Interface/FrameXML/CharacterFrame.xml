				<Scripts>
					<OnLoad>
						self.statsFramePool = CreateFramePool("FRAME", self, "CharacterStatFrameTemplate");
						local _, class = UnitClass("player");
						self.ClassBackground:SetAtlas("UI-Character-Info-"..class.."-BG", true);
