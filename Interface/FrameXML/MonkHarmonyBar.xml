<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
  <Script file="MonkHarmonyBar.lua"/>		
 
	<Frame name="MonkLightEnergyTemplate" mixin="MonkLightEnergyMixin" virtual="true">
		<Size x="21" y="21"/>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture parentKey="Chi_BG" atlas="uf-chi-bg" useAtlasSize="true" texelSnappingBias="0.0" snapToPixelGrid="false">
					<Anchors>
						<Anchor point="CENTER" x="0" y="-2.5"/>
					</Anchors>
				</Texture>
				<Texture parentKey="Chi_BG_Glow" atlas="uf-chi-fx-bgglow" useAtlasSize="true" alphaMode="BLEND" parentArray="fxTextures">
					<Anchors>
						<Anchor point="CENTER" x="0" y="-1"/>
					</Anchors>
				</Texture>
				<Texture parentKey="Chi_BG_Active" atlas="uf-chi-bg-active" useAtlasSize="true" texelSnappingBias="0.0" snapToPixelGrid="false">
					<Anchors>
						<Anchor point="CENTER" x="0" y="-2.5"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="ARTWORK">
				<Texture parentKey="FB_Wind_FX" atlas="uf-chi-windfx" alphaMode="BLEND" parentArray="fxTextures">
					<Size x="37" y="36"/>
					<Anchors>
						<Anchor point="CENTER" x="-1" y="3"/>
					</Anchors>
				</Texture>
				<Texture parentKey="Chi_FX_2" atlas="uf-chi-fx-2" useAtlasSize="true" alphaMode="BLEND"  parentArray="fxTextures">
					<Anchors>
						<Anchor point="CENTER" x="0" y="0"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="ARTWORK" textureSubLevel="2">
				<Texture parentKey="Chi_Icon" atlas="uf-chi-icon" useAtlasSize="true" texelSnappingBias="0.0" snapToPixelGrid="false">
					<Anchors>
						<Anchor point="CENTER" x="0" y="0"/>
					</Anchors>
				</Texture>
				<Texture parentKey="Chi_Deplete" atlas="uf-chi-fx-deplete" useAtlasSize="true" alphaMode="BLEND" parentArray="fxTextures">
					<Anchors>
						<Anchor point="CENTER" x="0" y="0"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="ARTWORK" textureSubLevel="3">
				<Texture parentKey="FX_OuterGlow" atlas="uf-chi-outerglow" useAtlasSize="true" alphaMode="BLEND" parentArray="fxTextures">
					<Anchors>
						<Anchor point="CENTER" x="0" y="-.5"/>
					</Anchors>
				</Texture>
				<Texture parentKey="FX_Smoke" atlas="uf-chi-fx-smoke" useAtlasSize="true" alphaMode="BLEND" parentArray="fxTextures">
					<Anchors>
						<Anchor point="CENTER" x="0" y="6"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="OVERLAY">
				<Texture parentKey="Orb_Gleam" atlas="uf-chi-orbgleam" useAtlasSize="true" alphaMode="BLEND" texelSnappingBias="0.0" snapToPixelGrid="false">
					<Anchors>
						<Anchor point="CENTER" x="0" y="0"/>
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
		<Animations>
			<AnimationGroup parentKey="activate" setToFinalAlpha="true">
				<FlipBook smoothing="NONE" childKey="FB_Wind_FX" duration=".57" order="1" flipBookRows="3" flipBookColumns="6" flipBookFrames="17" flipBookFrameWidth="0" flipBookFrameHeight="0"/>
				<Alpha smoothing="NONE" childKey="FX_OuterGlow" duration=".17" order="1" fromAlpha="0" toAlpha="1"/>
				<Alpha startDelay=".17" smoothing="NONE" childKey="FX_OuterGlow" duration=".1" order="1" fromAlpha="1" toAlpha="1"/>
				<Alpha startDelay=".18" smoothing="NONE" childKey="FX_OuterGlow" duration=".65" order="1" fromAlpha="1" toAlpha="0"/>
				<Alpha smoothing="NONE" childKey="Chi_Icon" duration=".4" order="1" fromAlpha="0" toAlpha="0"/>
				<Alpha startDelay=".4" smoothing="NONE" childKey="Chi_Icon" duration=".43" order="1" fromAlpha="0" toAlpha="1"/>
				<Alpha smoothing="NONE" childKey="Chi_FX_2" duration=".4" order="1" fromAlpha="0" toAlpha="1"/>
				<Alpha startDelay=".4" smoothing="NONE" childKey="Chi_FX_2" duration=".43" order="1" fromAlpha="1" toAlpha="0"/>
				<Rotation startDelay="0" smoothing="NONE" childKey="Chi_FX_2" duration=".43" order="1" degrees="-65">
					<Origin point="CENTER"/>
				</Rotation>
				<Alpha smoothing="NONE" childKey="Chi_BG_Active" duration=".15" order="1" fromAlpha="0" toAlpha="1"/>
				<Alpha startDelay="0" smoothing="NONE" childKey="Chi_BG" duration=".17" order="1" fromAlpha="1" toAlpha="1"/>
				<Alpha startDelay=".17" smoothing="NONE" childKey="Chi_BG" duration=".1" order="1" fromAlpha="1" toAlpha="0"/>
				<Alpha smoothing="NONE" childKey="Chi_BG_Glow" duration=".17" order="1" fromAlpha="0" toAlpha="1"/>
				<Alpha startDelay=".17" smoothing="NONE" childKey="Chi_BG_Glow" duration=".33" order="1" fromAlpha="1" toAlpha="1"/>
				<Alpha startDelay=".5" smoothing="NONE" childKey="Chi_BG_Glow" duration=".33" order="1" fromAlpha="1" toAlpha="0"/>
			</AnimationGroup>
			<AnimationGroup parentKey="deactivate" setToFinalAlpha="true">
				<Alpha startDelay="0" smoothing="NONE" childKey="FX_OuterGlow" duration=".33" order="1" fromAlpha="1" toAlpha="1"/>
				<Alpha startDelay=".33" smoothing="NONE" childKey="FX_OuterGlow" duration=".17" order="1" fromAlpha="1" toAlpha="0"/>
				<Alpha startDelay="0" smoothing="NONE" childKey="FX_Smoke" duration=".3" order="1" fromAlpha="1" toAlpha="1"/>
				<Translation smoothing="NONE" childKey="FX_Smoke" duration=".5" order="1" offsetX="0" offsetY="5"/>
				<Alpha startDelay=".3" smoothing="NONE" childKey="FX_Smoke" duration=".2" order="1" fromAlpha="1" toAlpha="0"/>
				<Alpha smoothing="NONE" childKey="Chi_Icon" duration=".2" order="1" fromAlpha="1" toAlpha="0"/>
				<Alpha startDelay="0" smoothing="NONE" childKey="Chi_Deplete" duration=".5" order="1" fromAlpha="1" toAlpha="0"/>
				<Rotation smoothing="NONE" childKey="Chi_Deplete" duration=".5" order="1" degrees="-30">
					<Origin point="CENTER"/>
				</Rotation>
			</AnimationGroup>
		</Animations>
	</Frame>

	<Frame name="MonkHarmonyBarFrameTemplate" inherits="ClassResourceBarTemplate" mixin="MonkPowerBar" virtual="true">
		<Size x="1" y="60"/>
		<KeyValues>
			<KeyValue key="powerToken" value="CHI" type="string"/>
			<KeyValue key="powerToken2" value="DARK_FORCE" type="string"/>
			<KeyValue key="powerType" value="Enum.PowerType.Chi" type="global"/>
			<KeyValue key="resourcePointTemplate" value="MonkLightEnergyTemplate" type="string"/>
			<KeyValue key="resourcePointSetupFunc" value="MonkLightEnergyMixin.Setup" type="global"/>
			<KeyValue key="resourcePointReleaseFunc" value="MonkLightEnergyMixin.OnRelease" type="global"/>
			<!-- Spacing is adjusted dynamically at runtime in lua -->
			<KeyValue key="spacing" value="2" type="number"/>
			<KeyValue key="class" value="MONK" type="string"/>
			<KeyValue key="spec" value="SPEC_MONK_WINDWALKER" type="global"/>
		</KeyValues>
	</Frame>
  
	<Frame name="MonkHarmonyBarFrame" inherits="MonkHarmonyBarFrameTemplate">
		<Size x="1" y="60"/>
		<KeyValues>
			<KeyValue key="topPadding" value="7" type="number"/>
			<KeyValue key="showTooltip" value="true" type="boolean"/>
			<KeyValue key="tooltip1" value="CHI_POWER" type="global"/>
			<KeyValue key="tooltip2" value="CHI_TOOLTIP" type="global"/>
		</KeyValues>
	</Frame>
</Ui>
