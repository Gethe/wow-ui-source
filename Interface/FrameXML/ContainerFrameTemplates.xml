		<Scripts>
			<OnEnter>
				GameTooltip:SetOwner(self, "ANCHOR_LEFT");
				GameTooltip:SetText(BACKPACK_AUTHENTICATOR_INCREASE_SIZE, 1, 1, 1);
				GameTooltip:Show();
			</OnEnter>
			<OnLeave function="GameTooltip_Hide"/>
			<OnClick>
				StaticPopup_Show("BACKPACK_INCREASE_SIZE");
			</OnClick>
		</Scripts>
	</Button>
	
