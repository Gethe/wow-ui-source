					<Anchor point="TOPLEFT" relativeTo="TicketStatusTitleText">
						<Offset x="-8" y="8"/>
					</Anchor>
					<Anchor point="BOTTOMRIGHT" relativeTo="TicketStatusTime">
						<Offset x="30" y="-8"/>
