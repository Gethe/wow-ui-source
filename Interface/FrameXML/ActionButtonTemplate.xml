	<Frame name="ActionButtonProfessionOverlayTemplate" mixin="ActionBarActionEventsFrameMixin" virtual="true">
		<Size x="1" y="1"/>
		<Layers>
			<Layer>
				<Texture parentKey="Texture">
					<Anchors>
