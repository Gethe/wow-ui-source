			<Button name="MerchantGuildBankRepairButton" hidden="true">
				<Size x="36" y="36"/>
				<Anchors>
					<Anchor point="LEFT" relativeTo="MerchantRepairAllButton" relativePoint="RIGHT" x="8" y="0"/>
				</Anchors>
				<Layers>
					<Layer level="BACKGROUND">
