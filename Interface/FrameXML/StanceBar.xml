	<CheckButton name="StanceButtonTemplate" inherits="QuickKeybindButtonTemplate, SecureFrameTemplate, ActionButtonTemplate" virtual="true">
		<Size>
			<AbsDimension x="30" y="30"/>
		</Size>
		<Scripts>
			<OnLoad>
				self.cooldown:SetSwipeColor(0, 0, 0);
				self:RegisterForClicks("AnyUp");
			</OnLoad>
			<OnClick inherit="append">
				if ( not KeybindFrames_InQuickKeybindMode() ) then
					self:SetChecked(not self:GetChecked());
					StanceBar_Select(self:GetID());
				end
			</OnClick>
			<OnEnter function="StanceButton_OnEnter" inherit="append"/>
			<OnLeave function="GameTooltip_Hide" inherit="append"/>
		</Scripts>
		<NormalTexture name="$parentNormalTexture2" file="Interface\Buttons\UI-Quickslot2">
