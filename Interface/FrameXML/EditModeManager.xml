								<Anchors>
									<Anchor point="TOPLEFT" relativeKey="$parent.ExtraAbilities" relativePoint="BOTTOMLEFT"/>
								</Anchors>
							</Frame>
							<Frame parentKey="BuffFrame" inherits="EditModeCheckButtonTemplate">
