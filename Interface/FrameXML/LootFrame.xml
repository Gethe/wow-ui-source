<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
	<Script file="LootFrame.lua"/>

	<Frame name="LootButtonTemplate" virtual="true">
		<Size x="157" y="46"/>
		<Frames>
			<ItemButton parentKey="Item" useParentLevel="true">
				<Anchors>
					<Anchor point="TOPLEFT" x="5" y="-4"/>
				</Anchors>
				<Size x="37" y="37"/>
				<HitRectInsets>
					<AbsInset left="0" right="-157" top="0" bottom="0"/>
				</HitRectInsets>
				<Scripts>
					<OnLoad>
						self:RegisterForClicks("LeftButtonUp", "RightButtonUp");
						self.hasItem = 1;
					</OnLoad>
					<OnEnter>
						LootItem_OnEnter(self:GetParent(), motion);
					</OnEnter>
					<OnLeave>
						GameTooltip:Hide();
						ResetCursor();
						LootItem_OnLeave(self:GetParent(), motion);
					</OnLeave>
					<OnMouseDown>
						LootItem_OnMouseDown(self:GetParent(), button);
					</OnMouseDown>
					<OnMouseUp>
						LootItem_OnMouseUp(self:GetParent(), button);
					</OnMouseUp>
					<OnUpdate>
						if ( GameTooltip:IsOwned(self:GetParent()) ) then
							LootItem_OnEnter(self:GetParent());
						end
						CursorOnUpdate(self:GetParent());
					</OnUpdate>
					<OnClick>
						if ( IsModifiedClick() ) then
							HandleModifiedItemClick(GetLootSlotLink(self:GetParent().slot));
						else
							LootButton_OnClick(self:GetParent(), button);
						end
					</OnClick>
				</Scripts>
			</ItemButton>
		</Frames>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture parentKey="NameFrame" atlas="looting_itemcard_bg">
					<Anchors>
						<Anchor point="TOPLEFT" x="0" y="0"/>
						<Anchor point="BOTTOMRIGHT" x="0" y="0"/>
					</Anchors>
				</Texture>
				<Texture parentKey="QualityFrame" atlas="looting_raritytag_frame">
					<Size x="100" y="13"/>
					<Anchors>
						<Anchor point="TOPRIGHT" x="0" y="0"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="BORDER">
				<Texture parentKey="BorderFrame" atlas="looting_itemcard_stroke_normal">
					<Anchors>
						<Anchor point="TOPLEFT" x="0" y="0"/>
						<Anchor point="BOTTOMRIGHT" x="0" y="0"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="ARTWORK">
				<FontString parentKey="MoneyText" inherits="GameFontNormal" justifyH="LEFT">
					<Size x="93" y="38"/>
					<Anchors>
						<Anchor point="LEFT" relativeKey="$parent.Item" relativePoint="RIGHT" x="8" y="0"/>
					</Anchors>
				</FontString>
				<FontString parentKey="Text" inherits="GameFontNormal" justifyH="LEFT" justifyV="TOP">
					<Size x="150" y="30"/>
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.Item" relativePoint="TOPRIGHT" x="8" y="-8"/>
					</Anchors>
				</FontString>
				<FontString parentKey="QualityText" inherits="GameFontWhiteTiny2" justifyH="RIGHT">
					<Anchors>
						<Anchor point="TOPRIGHT" x="-4" y="-2"/>
					</Anchors>
				</FontString>
			</Layer>
			<Layer level="OVERLAY">
				<Texture parentKey="IconQuestTexture">
					<Size x="37" y="38"/>
					<Anchors>
						<Anchor point="TOP" relativeKey="$parent.Item" x="0" y="0"/>
					</Anchors>
				</Texture>
				<Texture parentKey="HighlightNameFrame" alphaMode="ADD" atlas="looting_itemcard_stroke_clickstate" alpha="0.7" hidden="true">
					<Anchors>
						<Anchor point="TOPLEFT" x="0" y="0"/>
						<Anchor point="BOTTOMRIGHT" x="0" y="0"/>
					</Anchors>
				</Texture>
				<Texture parentKey="PushedNameFrame" alphaMode="ADD" atlas="looting_itemcard_stroke_clickstate" hidden="true">
					<Anchors>
						<Anchor point="TOPLEFT" x="0" y="0"/>
						<Anchor point="BOTTOMRIGHT" x="0" y="0"/>
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
		<Animations>
			<AnimationGroup parentKey="ShownAnim" looping="NONE" setToFinalAlpha="true">
				<Alpha duration="0.1" fromAlpha="1" toAlpha="1" smoothing="IN"/>
			</AnimationGroup>
			<AnimationGroup parentKey="AutoLootAnim" looping="NONE" setToFinalAlpha="true">
				<Translation duration="0.3" offsetX="100" smoothing="IN"/>
				<Alpha duration="0.2" fromAlpha="1" toAlpha="0" startDelay="0.1" smoothing="IN"/>
			</AnimationGroup>
		</Animations>
	</Frame>
	
	<Frame name="LootFrame" frameStrata="HIGH" toplevel="true" movable="true" enableMouse="true" clampedToScreen="true" hidden="true" parent="UIParent" mixin="LootFrameMixin" inherits="EditModeLootFrameSystemTemplate">
		<Size x="220" y="290"/>
		<KeyValues>
			<KeyValue key="layoutType" value="ButtonFrameTemplateNoPortrait" type="string"/>
		</KeyValues>
		<Layers>
			<Layer level="BACKGROUND" textureSubLevel="-6">
				<Texture name="$parentBg" parentKey="Bg">
					<Color r="0.1" g="0.1" b="0.1" a="0.9"/>
					<Anchors>
						<Anchor point="TOPLEFT" x="2" y="-21"/>
						<Anchor point="BOTTOMRIGHT" x="-2" y="2"/>
					</Anchors>
				</Texture>
				<Texture name="$parentTitleBg" parentKey="TitleBg" inherits="_UI-Frame-TitleTileBg">
					<Anchors>
						<Anchor point="TOPLEFT" x="2" y="-2"/>
						<Anchor point="TOPRIGHT" x="-25" y="-2"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="BACKGROUND" textureSubLevel="-5">
				<Texture name="$parentTopTileStreaks" parentKey="TopTileStreaks" inherits="_UI-Frame-TopTileStreaks">
					<Anchors>
						<Anchor point="TOPLEFT" x="0" y="-21"/>
						<Anchor point="TOPRIGHT" x="-2" y="-21"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="OVERLAY">
				<FontString parentKey="ItemsText" inherits="GameFontNormal" text="ITEMS">
					<Anchors>
						<Anchor point="TOP" x="-12" y="-5"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Frame parentKey="NineSlice" useParentLevel="true" inherits="NineSlicePanelTemplate"/>
			<Button parentKey="ClosePanelButton" inherits="UIPanelCloseButton">
				<Anchors>
					<Anchor point="TOPRIGHT" relativePoint="TOPRIGHT" x="1" y="0"/>
				</Anchors>
			</Button>
			<Frame parentKey="ScrollBox" inherits="WowScrollBoxList">
				<KeyValues>
					<KeyValue key="upperShadow" value="_looting_itemcard_shadow-center" type="string"/>
					<KeyValue key="lowerShadow" value="_looting_itemcard_shadow-center" type="string"/>
				</KeyValues>
				<Anchors>
					<Anchor point="TOPLEFT" x="4" y="-22"/>
					<Anchor point="BOTTOM" x="0" y="4"/>
				</Anchors>
			</Frame>
			<EventFrame parentKey="ScrollBar" inherits="MinimalScrollBar">
				<Anchors>
					<Anchor point="TOPLEFT" relativePoint="TOPRIGHT" x="-16" y="-28"/>
					<Anchor point="BOTTOMLEFT" relativePoint="BOTTOMRIGHT" x="-16" y="6"/>
				</Anchors>
			</EventFrame>
		</Frames>
		<Scripts>
			<OnLoad method="OnLoad" inherit="prepend"/>
			<OnEvent method="OnEvent"/>
			<OnShow method="OnShow"/>
			<OnHide method="OnHide"/>
		</Scripts>
		<Animations>
			<AnimationGroup parentKey="ShowAnim" looping="NONE" setToFinalAlpha="true">
				<Translation duration="0.1" offsetY="-10" smoothing="IN"/>
				<Alpha duration="0.1" fromAlpha="1" toAlpha="0" smoothing="IN"/>
			</AnimationGroup>
			<AnimationGroup parentKey="HideAnim" looping="NONE" setToFinalAlpha="true">
				<Translation duration="0.1" offsetY="-10" smoothing="IN"/>
				<Alpha duration="0.1" fromAlpha="1" toAlpha="0" smoothing="IN"/>
				<Scripts>
					<OnFinished>
						StaticPopup_Hide("LOOT_BIND");
						HideUIPanel(LootFrame);
					</OnFinished>
				</Scripts>
			</AnimationGroup>
		</Animations>
	</Frame>
</Ui>
