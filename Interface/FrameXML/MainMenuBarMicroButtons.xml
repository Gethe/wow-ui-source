		</Anchors>
	</Frame>

	<Button name="CharacterMicroButton" inherits="MainMenuBarMicroButton" mixin="CharacterMicroButtonMixin">
		<KeyValues>
			<KeyValue key="commandName" value="TOGGLECHARACTER0" type="string"/>
