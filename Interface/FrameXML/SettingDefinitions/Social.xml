<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
	<Script file="Social.lua"/>
	
	<Frame name="TwitterPanelTemplate" inherits="SettingsCheckBoxControlTemplate" mixin="TwitterPanelMixin" virtual="true">
		<Size y="55"/>
		<Frames>
			<Button parentKey="Button" inherits="UIPanelButtonTemplate">
				<Size x="200" y="21"/>
				<Anchors>
					<Anchor point="TOPLEFT" relativeKey="$parent.CheckBox" relativePoint="BOTTOMLEFT" />
				</Anchors>
			</Button>
		</Frames>
		<Layers>
			<Layer level="DIALOG">
				<FontString parentKey="LoginStatus" inherits="GameFontNormal" justifyH="LEFT">
					<Anchors>
						<Anchor point="LEFT" relativeKey="$parent.CheckBox" relativePoint="RIGHT"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
	</Frame>
</Ui>
