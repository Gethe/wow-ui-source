					<Anchor point="TOPLEFT" x="188" y="-32"/>
				</Anchors>
			</Frame>
			<Frame parentKey="CommunitiesListDropDownMenu" inherits="CommunitiesListDropDownMenuTemplate">
				<Size x="40" y="28"/>
