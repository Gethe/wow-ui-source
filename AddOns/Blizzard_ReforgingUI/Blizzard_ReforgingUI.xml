			<Layer level="BORDER">
				<Texture  name="$parentBottomBg" file="Interface\Reforging\ReforgingTextures">
					<Size x="330" y="53"/>
					<TexCoords left="0.28515625" right="0.92968750" top="0.20703125" bottom="0.41406250"/>
