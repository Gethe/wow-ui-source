				<Anchors>
					<Anchor point="TOPLEFT"  relativeTo="$parentInset" x="4" y="-30" />
				</Anchors>
			</Frame>
			<Frame name="$parentRightStat1" inherits="ReforgingStatTemplate">
				<Anchors>
					<Anchor point="TOPRIGHT"  relativeTo="$parentInset" x="-4" y="-30" />
				</Anchors>
			</Frame>
