	<Frame name="ObjectiveTrackerBlockTemplate" hidden="true" virtual="true">
		<Size x="232" y="10"/>
		<Layers>
			<Layer level="ARTWORK">
				<FontString parentKey="HeaderText" inherits="ObjectiveFont">
					<Size x="192" y="0"/>
