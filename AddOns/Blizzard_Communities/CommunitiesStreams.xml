					<KeyValue key="hideCharCount" value="true" type="boolean"/>
				</KeyValues>
				<Scripts>
					<OnLoad>
						InputScrollFrame_OnLoad(self);
						self.EditBox.nextEditBox = self:GetParent().NameEdit;
					</OnLoad>
				</Scripts>
			</ScrollFrame>
			<CheckButton parentKey="TypeCheckBox" inherits="UICheckButtonTemplate">
				<Size x="20" y="20"/>
