			<Button name="MerchantRepairAllButton">
				<Size x="36" y="36"/>
				<Anchors>
					<Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMLEFT" x="172" y="11"/>
				</Anchors>
				<Layers>
					<Layer level="BORDER">
