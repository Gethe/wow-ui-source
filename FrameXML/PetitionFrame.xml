		<Scripts>
			<OnLoad>
				this:RegisterEvent("PETITION_SHOW");
				this:RegisterEvent("PETITION_CLOSED");
			</OnLoad>
			<OnEvent>
				if (event == "PETITION_SHOW") then
					ShowUIPanel(PetitionFrame);
					if ( not PetitionFrame:IsVisible() ) then
						ClosePetition();
						return;
					end

					PetitionFrame_Update();
				elseif (event == "PETITION_CLOSED") then
					HideUIPanel(PetitionFrame);
				end
			</OnEvent>
			<OnShow>
				PlaySound("igQuestListOpen");
			</OnShow>
			<OnHide>
				PlaySound("igQuestListClose");
				ClosePetition();
			</OnHide>
			<OnMouseWheel>
				return;
			</OnMouseWheel>
		</Scripts>
