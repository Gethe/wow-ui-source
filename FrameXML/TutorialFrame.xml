			</OnShow>
			<OnLoad>
				TutorialFrame_OnLoad(self);
			</OnLoad>
			<OnHide function="TutorialFrame_OnHide"/>
			<OnEvent>
				local arg1 = ...;
				if ( event == "TUTORIAL_TRIGGER" ) then
					TutorialFrame_NewTutorial(arg1);
				elseif ( event == "DISPLAY_SIZE_CHANGED" ) then
					TutorialFrame_Update(TutorialFrame.id);
				end
			</OnEvent>
		</Scripts>
