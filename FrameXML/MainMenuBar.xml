						</Texture>
						<Texture name="MainMenuMaxLevelBar3" file="Interface\MainMenuBar\UI-MainMenuBar-MaxLevel">
							<Size>
								<AbsDimension x="256" y="7"/>
							</Size>
							<Anchors>
