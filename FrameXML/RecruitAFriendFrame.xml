	<Frame name="RecruitHelpBoxTemplate_Left" inherits="RecruitHelpBoxTemplate" virtual="true">
		<Frames>
			<Frame parentKey="Arrow" inherits="GlowBoxArrowTemplate">
				<Anchors>
					<Anchor point="RIGHT" relativePoint="LEFT" x="20"/>
				</Anchors>
				<Scripts>
					<OnLoad>
						self.Arrow:SetRotation(-math.pi / 2);
						self.Glow:SetRotation(-math.pi / 2);
						self.Glow:ClearAllPoints();
						self.Glow:SetPoint("CENTER", self.Arrow, "CENTER", -5, 0);
					</OnLoad>
				</Scripts>
			</Frame>
		</Frames>
	</Frame>

	<Frame name="RecruitHelpBoxTemplate_Right" inherits="RecruitHelpBoxTemplate" virtual="true">
		<Frames>
			<Frame parentKey="Arrow" inherits="GlowBoxArrowTemplate">
				<Anchors>
					<Anchor point="LEFT" relativePoint="RIGHT" x="-20"/>
				</Anchors>
				<Scripts>
					<OnLoad>
						self.Arrow:SetRotation(math.pi / 2);
						self.Glow:SetRotation(math.pi / 2);
						self.Glow:ClearAllPoints();
						self.Glow:SetPoint("CENTER", self.Arrow, "CENTER", 5, 0);
					</OnLoad>
				</Scripts>
			</Frame>
		</Frames>
	</Frame>
