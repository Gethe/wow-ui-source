					<OnClick>
						PlaySound("gsTitleOptionOK");
						VoiceOptionsFrame_Okay();
						VoiceOptionsFrameType1KeyBindingButton:UnlockHighlight();
						VoiceOptionsFrameType1KeyBindingButton.buttonPressed = nil;
						VoiceOptionsFrameBindingOutputText:SetText("");
