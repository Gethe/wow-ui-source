				if ( event == "ACTIONBAR_PAGE_CHANGED" ) then
					if ( GetBonusBarOffset() > 0 ) then
						ShowBonusActionBar();
					else
						HideBonusActionBar();
					end
					return;
				end
				if ( arg1 == "player" and (event == "UNIT_HEALTH" or event == "UNIT_MANA" or event == "UNIT_RAGE" or event == "UNIT_FOCUS" or event == "UNIT_ENERGY") ) then
