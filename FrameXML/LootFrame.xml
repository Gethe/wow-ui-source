				<HighlightTexture file="Interface\Buttons\UI-Common-MouseHilight" alphaMode="ADD"/>
			</Button>
		</Frames>
		<Scripts>
			<OnLoad>
				LootFrame_OnLoad();
			</OnLoad>
			<OnEvent>
				LootFrame_OnEvent(event);
			</OnEvent>
			<OnShow>
				LootFrame_OnShow();
			</OnShow>
			<OnHide>
