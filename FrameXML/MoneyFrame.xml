						parent.hasPickup = 1;
					</OnClick>
				</Scripts>
				<NormalTexture file="Interface\MoneyFrame\UI-MoneyIcons">
					<Size>
						<AbsDimension x="13" y="13"/>
					</Size>
					<Anchors>
						<Anchor point="RIGHT"/>
					</Anchors>
					<TexCoords left="0" right="0.25" top="0" bottom="1"/>
				</NormalTexture>
				<NormalText name="$parentText" inherits="NumberFontNormal" justifyH="LEFT">
					<Anchors>
						<Anchor point="LEFT"/>
					</Anchors>
				</NormalText>
				<PushedTextOffset>
					<AbsDimension x="0" y="0"/>
				</PushedTextOffset>
			</Button>
		</Frames>
		<Scripts>
			<OnLoad>
				SmallMoneyFrame_OnLoad();
			</OnLoad>
			<OnEvent>
				MoneyFrame_OnEvent();
			</OnEvent>
			<OnShow>
				MoneyFrame_UpdateMoney();
			</OnShow>
			<OnHide>
				if ( this.hasPickup == 1 ) then
					CoinPickupFrame:Hide();
					this.hasPickup = 0;
