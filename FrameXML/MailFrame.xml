				<Scripts>
					<OnLoad>
						this:RegisterEvent("MAIL_INBOX_UPDATE");
						this:RegisterForClicks("LeftButtonUp", "RightButtonUp");
					</OnLoad>
					<OnEvent>
						GameTooltip:Hide();
						if ( GameTooltip:IsOwned(this) ) then
							GameTooltip:SetInboxItem(InboxFrame.openMailID);
							GameTooltip:Show();
						end
					</OnEvent>
					<OnClick>
						if ( OpenMailFrame.cod and (OpenMailFrame.cod > GetMoney()) ) then
							StaticPopup_Show("COD_ALERT");
						elseif ( OpenMailFrame.cod ) then
							StaticPopup_Show("COD_CONFIRMATION");
						else
							TakeInboxItem(InboxFrame.openMailID);
						end
						PlaySound("igMainMenuOptionCheckBoxOn");
					</OnClick>
					<OnEnter>
						OpenMailPackage_OnEnter();
					</OnEnter>
					<OnLeave>
						GameTooltip:Hide();
					</OnLeave>
