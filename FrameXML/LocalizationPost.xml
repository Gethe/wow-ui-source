<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
	<!-- This frame exists only to load the script and execute it, inline script has some issues -->
	<Script file="LocalizationPost.lua"/> 
	<!-- This frame exists only to load the script and execute it, inline script has some issues -->
	<Frame name="DeclensionTemplate"  virtual="true">
		<Size x="300" y="40"/>
		<Layers>
			<Layer level="BACKGROUND">
				<FontString name="$parentType" inherits="GameFontNormalLarge">
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset x="0" y="0"/>
						</Anchor>
					</Anchors>
				</FontString>
				<FontString name="$parentExample" inherits="GameFontHighlight">
					<Anchors>
						<Anchor point="TOPLEFT" relativeTo="$parentType" relativePoint="BOTTOMLEFT">
							<Offset x="0" y="0"/>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<EditBox name="$parentEdit" letters="16">
				<Size x="160" y="37"/>
				<Anchors>
					<Anchor point="LEFT">
						<Offset x="250" y="2"/>
					</Anchor>
				</Anchors>
				<Backdrop bgFile="Interface\Tooltips\UI-Tooltip-Background" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
					<BackgroundInsets>
						<AbsInset left="10" right="5" top="4" bottom="9"/>
					</BackgroundInsets>
					<TileSize>
						<AbsValue val="16"/>
					</TileSize>
					<EdgeSize>
						<AbsValue val="16"/>
					</EdgeSize>
				</Backdrop>
				<Scripts>
					<OnEscapePressed>
						DeclensionFrame_OnCancel();
					</OnEscapePressed>
					<OnEnterPressed>
						DeclensionFrame_OnOkay();
					</OnEnterPressed>
					<OnTabPressed>
						EditBox_HandleTabbing(RUSSIAN_DECLENSION_TAB_LIST);
					</OnTabPressed>
					<OnEditFocusLost>
						this:HighlightText(0, 0);
					</OnEditFocusLost>
					<OnEditFocusGained>
						this:HighlightText();
					</OnEditFocusGained>
					<OnTextChanged>
						getglobal(this:GetParent():GetName().."Example"):SetText(format(getglobal("RUSSIAN_DECLENSION_EXAMPLE_"..this:GetParent():GetID()), this:GetText()));
					</OnTextChanged>
				</Scripts>
				<FontString inherits="NumberFontNormalLarge"/>
				<TextInsets>
					<AbsInset left="10" bottom="2"/>
				</TextInsets>
			</EditBox>
		</Frames>
	</Frame>
	<Frame name="DeclensionFrame" toplevel="true" parent="UIParent" movable="false" enableMouse="true" hidden="true">
		<Size x="450" y="330"/>
		<Anchors>
			<Anchor point="CENTER">
				<Offset x="0" y="0"/>
			</Anchor>
		</Anchors>
		<Layers>
			<Layer level="OVERLAY">
				<FontString name="$parentNominative" inherits="BossEmoteNormalHuge">
					<Anchors>
						<Anchor point="TOP">
							<Offset x="0" y="-16"/>
						</Anchor>
					</Anchors>
				</FontString>
				<FontString inherits="GameFontHighlight" text="RUSSIAN_DECLENSION">
					<Anchors>
						<Anchor point="CENTER" relativeTo="$parentNominative">
							<Offset x="0" y="-16"/>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
			<BackgroundInsets>
				<AbsInset left="11" right="12" top="12" bottom="11"/>
			</BackgroundInsets>
			<TileSize>
				<AbsValue val="32"/>
			</TileSize>
			<EdgeSize>
				<AbsValue val="32"/>
			</EdgeSize>
		</Backdrop>
		<Frames>
			<Frame name="$parentDeclension1" inherits="DeclensionTemplate" id="1">
				<Size x="300" y="40"/>
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset x="20" y="-64"/>
					</Anchor>
				</Anchors>
			</Frame>
			<Frame name="$parentDeclension2" inherits="DeclensionTemplate" id="2">
				<Size x="300" y="40"/>
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentDeclension1" relativePoint="BOTTOMLEFT">
						<Offset x="0" y="0"/>
					</Anchor>
				</Anchors>
			</Frame>
			<Frame name="$parentDeclension3" inherits="DeclensionTemplate" id="3">
				<Size x="300" y="40"/>
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentDeclension2" relativePoint="BOTTOMLEFT">
						<Offset x="0" y="0"/>
					</Anchor>
				</Anchors>
			</Frame>
			<Frame name="$parentDeclension4" inherits="DeclensionTemplate" id="4">
				<Size x="300" y="40"/>
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentDeclension3" relativePoint="BOTTOMLEFT">
						<Offset x="0" y="0"/>
					</Anchor>
				</Anchors>
			</Frame>
			<Frame name="$parentDeclension5" inherits="DeclensionTemplate" id="5">
				<Size x="300" y="40"/>
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentDeclension4" relativePoint="BOTTOMLEFT">
						<Offset x="0" y="0"/>
					</Anchor>
				</Anchors>
			</Frame>
			<Frame name="$parentSet">
				<Size x="150" y="24"/>
				<Anchors>
					<Anchor point="BOTTOM">
						<Offset x="0" y="50"/>
					</Anchor>
				</Anchors>
				<Layers>
					<Layer level="BACKGROUND">
						<FontString name="$parentPage" inherits="GameFontNormalSmall" text="1 of 2">
							<Size>
								<AbsDimension x="40" y="16"/>
							</Size>
							<Anchors>
								<Anchor point="CENTER">
									<Offset x="0" y="0"/>
								</Anchor>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
				<Frames>
					<Button name="$parentNext">
						<Size>
							<AbsDimension x="20" y="20"/>
						</Size>
						<Anchors>
							<Anchor point="LEFT" relativeTo="$parentPage" relativePoint="RIGHT">
								<Offset x="10" y="0"/>
							</Anchor>
						</Anchors>
						<Scripts>
							<OnClick>
								DeclensionFrame_Next();
								PlaySound("igMainMenuOptionCheckBoxOn");
							</OnClick>
						</Scripts>
						<NormalTexture file="Interface\Buttons\UI-SpellbookIcon-NextPage-Up"/>
						<PushedTexture file="Interface\Buttons\UI-SpellbookIcon-NextPage-Down"/>
						<DisabledTexture file="Interface\Buttons\UI-SpellbookIcon-NextPage-Disabled"/>
						<HighlightTexture file="Interface\Buttons\UI-Common-MouseHilight" alphaMode="ADD"/>
						<PushedTextOffset>
							<AbsDimension x="0" y="0"/>
						</PushedTextOffset>
					</Button>
					<Button name="$parentPrev">
						<Size>
							<AbsDimension x="20" y="20"/>
						</Size>
						<Anchors>
							<Anchor point="RIGHT" relativeTo="$parentPage" relativePoint="LEFT">
								<Offset x="-10" y="0"/>
							</Anchor>
						</Anchors>
						<Scripts>
							<OnClick>
								DeclensionFrame_Prev();
								PlaySound("igMainMenuOptionCheckBoxOn");
							</OnClick>
						</Scripts>
						<NormalTexture file="Interface\Buttons\UI-SpellbookIcon-PrevPage-Up"/>
						<PushedTexture file="Interface\Buttons\UI-SpellbookIcon-PrevPage-Down"/>
						<DisabledTexture file="Interface\Buttons\UI-SpellbookIcon-PrevPage-Disabled"/>
						<HighlightTexture file="Interface\Buttons\UI-Common-MouseHilight" alphaMode="ADD"/>
						<PushedTextOffset>
							<AbsDimension x="0" y="0"/>
						</PushedTextOffset>
					</Button>
				</Frames>
			</Frame>
			<Button name="$parentOkayButton" inherits="OptionsButtonTemplate" text="OKAY">
				<Anchors>
					<Anchor point="RIGHT" relativePoint="BOTTOM">
						<Offset x="10" y="32"/>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						DeclensionFrame_OnOkay();
					</OnClick>
				</Scripts>
			</Button>
			<Button name="$parentCancelButton" inherits="OptionsButtonTemplate" text="CANCEL">
				<Anchors>
					<Anchor point="LEFT" relativePoint="BOTTOM">
						<Offset x="10" y="32"/>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						DeclensionFrame_OnCancel();
					</OnClick>
				</Scripts>
			</Button>
		</Frames>
		<Scripts>
			<OnShow>
				DeclensionFrame_Update();
			</OnShow>
			<OnLoad>
				this:RegisterEvent("PET_FORCE_NAME_DECLENSION");
				this.set = 1;
			</OnLoad>
			<OnEvent>
				DeclensionFrame_OnEvent(self, event, ...);
			</OnEvent>
		</Scripts>
	</Frame>
</Ui>